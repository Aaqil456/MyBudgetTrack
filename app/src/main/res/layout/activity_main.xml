<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_gradient_background"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Image Button -->
            <ImageButton
                android:id="@+id/buttonSetBajet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/money" />

            <TextView
                android:id="@+id/textView1a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Set Bajet" />


            <!-- Second Image Button -->
            <ImageButton
                android:id="@+id/buttonBajet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bajet" />

            <TextView
                android:id="@+id/textView2a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Tambah Perbelanjaan" />



            <!-- Third Image Button -->
            <ImageButton
                android:id="@+id/buttonBil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bil" />

            <TextView
                android:id="@+id/textView3a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Peringatan Bil" />

            <!-- Fourth Image Button -->
            <ImageButton
                android:id="@+id/buttonGraf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bar" />

            <TextView
                android:id="@+id/textView4a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Lihat Graf" />



        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
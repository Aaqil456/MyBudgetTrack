<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_gradient_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDailyExp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OuterLayer"
        android:text="Weeeee"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/OuterLayer"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_background"
        android:elevation="8dp"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/btnSetBajet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:elevation="8dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgSetBajet"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgSetBajet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="Set Bajet" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnBajet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:elevation="8dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgBajet"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bajet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgBajet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="Tambah Belanja" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnBil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:elevation="8dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgBil"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bil" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgBil"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="Bayar Bil" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnGraf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:elevation="18dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgGraf"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgGraf"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="Graf" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>

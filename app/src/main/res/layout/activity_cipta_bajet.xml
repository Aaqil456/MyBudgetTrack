<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_gradient_background"
    tools:context=".CiptaBajet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="627dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/nama_bajet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi Nama Bajet"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/jumlah_bajet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi Jumlah Bajet"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/tempoh_bajet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi Tempoh Bajet"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Tambah" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>